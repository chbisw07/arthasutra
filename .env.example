# Copy to .env and fill values for local dev

# SQLite by default; change to a full path if desired
DATABASE_URL=sqlite:///arthasutra.db

# Zerodha Kite (used in later phases)
KITE_API_KEY=
KITE_API_SECRET=
KITE_ACCESS_TOKEN=
# Optional: some setups require public_token for WebSocket
KITE_PUBLIC_TOKEN=
# Optional: user id (e.g., AB1234) if required by enctoken-based websocket
KITE_USER_ID=

# Live data provider: kite (WebSocket) or yf (yfinance poller)
LIVE_PROVIDER=yf
LIVE_POLL_SECONDS=60

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
